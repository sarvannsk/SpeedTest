<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dvara.speedtest.ui.fragment.SpeedTestFragment">
    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.dvara.speedtest.ui.viewmodel.SpeedTestViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gauge_mono_regular"
            android:text="@string/title_speedtest"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorNotActiveGaugeText"
            android:textSize="31sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/currentTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gauge_mono_regular"
            android:text="@string/title_speedtest"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorNotActiveGaugeText"
            android:textSize="31sp"
            app:layout_constraintBottom_toTopOf="@+id/mobileNumber"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gauge_mono_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           android:inputType="number"
            android:hint="@string/please_enter_your_mobile_number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorNotActiveGaugeText"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:layout_margin="5dp"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayoutGauge"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutGauge"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleX="1.056"
                android:scaleY="1.056"
                android:src="@drawable/gauge_keyhole_18" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackground" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBackground" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorBackground" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackground" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/my_cpb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:rotation="-131"
                app:drawBackgroundOutsideProgress="true"
                app:progress_background_color="@color/colorCircularProgressBarBackground"
                app:progress_end_color="@color/colorTransparent"
                app:progress_shader="sweep"
                app:progress_start_color="@color/colorTransparent"
                app:progress_stroke_cap="square"
                app:progress_stroke_width="10dp"
                app:style="solid" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/my_cpb_shadow_hide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="32dp"
                android:rotation="-131"
                app:drawBackgroundOutsideProgress="true"
                app:progress_background_color="@color/colorBackground"
                app:progress_end_color="@color/colorTransparent"
                app:progress_shader="sweep"
                app:progress_start_color="@color/colorTransparent"
                app:progress_stroke_cap="square"
                app:progress_stroke_width="10dp"
                app:style="solid" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.8dp"
                android:src="@drawable/ic_gauge_keyhole_window" />

            <ImageView
                android:id="@+id/imageViewNeedle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:rotation="131"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/needle" />

            <TextView
                android:id="@+id/textView0CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="252dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="start"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_gravity="start"
                android:layout_marginStart="46dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="188dp"
                android:fontFamily="@font/gotham_ssm"
                android:text="15"
                android:textAlignment="textStart"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="118dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="start"
                android:text="30"
                android:textAlignment="textStart"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginStart="101dp"
                android:layout_marginLeft="101dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="start"
                android:text="45"
                android:textAlignment="textStart"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView60CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginStart="145dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="center_horizontal"
                android:text="60"
                android:textAlignment="center"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView70CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="end"
                android:text="75"
                android:textAlignment="textEnd"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView90CPB"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="118dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="end"
                android:text="90"
                android:textAlignment="textEnd"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView100CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="188dp"
                android:layout_marginEnd="46dp"
                android:layout_marginRight="46dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="end"
                android:text="105"
                android:textAlignment="textEnd"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView120CPB"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="254dp"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:fontFamily="@font/gotham_ssm"
                android:gravity="end"
                android:text="120"
                android:textAlignment="textEnd"
                android:textColor="@color/colorNotActiveGaugeText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeLayoutGaugeCurrentDb"
                android:layout_width="120dp"
                android:layout_height="82dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/textViewCurrentDbCPB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/gauge_mono_regular"
                    android:text="00.0"
                    android:textAlignment="center"
                    android:textColor="@color/colorActiveGaugeText"
                    android:textSize="56sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <!--                <ImageView-->
                    <!--                    android:layout_width="24dp"-->
                    <!--                    android:layout_height="24dp"-->
                    <!--                    android:layout_centerVertical="true"-->
                    <!--                    android:src="@drawable/ic_outline_surround_sound"-->
                    <!--                    app:tint="#6afff3" />-->

                    <TextView
                        android:id="@+id/textViewDecibelCPB"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham_ssm"
                        android:gravity="center_horizontal"
                        android:text="@string/speed"
                        android:textAlignment="center"
                        android:textColor="#809193a8"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mbps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gauge_mono_regular"
            android:text="00.0"
            android:textAlignment="center"
            android:textColor="@color/colorActiveGaugeText"
            android:textSize="31sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutGauge" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mbps">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_button"
                android:elevation="0dp"
                android:fontFamily="@font/gauge_mono_regular"
                android:shadowRadius="15"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/rounded_button"
                android:elevation="0dp"
                android:fontFamily="@font/gauge_mono_regular"
                android:shadowRadius="15"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>